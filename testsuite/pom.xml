<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.nexus</groupId>
    <artifactId>nexus-oss</artifactId>
    <version>2.5.0-SNAPSHOT</version>
  </parent>

  <groupId>org.sonatype.nexus.testsuite</groupId>
  <artifactId>testsuite</artifactId>
  <name>${project.groupId}:${project.artifactId}</name>
  <packaging>pom</packaging>

  <modules>
    <module>modern-testsuite</module>
    <module>legacy-testsuite</module>

    <!--
    FIXME: Merge into legacy-testsuite
    -->
    <module>nexus-p2-repository-testsuite</module>
  </modules>

  <dependencyManagement>
    <dependencies>

      <!-- IMPORTS -->

      <dependency>
        <groupId>org.sonatype.nexus.buildsupport</groupId>
        <artifactId>all</artifactId>
        <type>pom</type>
        <version>2.5.0-SNAPSHOT</version>
        <scope>import</scope>
      </dependency>

      <dependency>
        <groupId>org.sonatype.nexus.plugins</groupId>
        <artifactId>plugins</artifactId>
        <type>pom</type>
        <version>2.5.0-SNAPSHOT</version>
        <scope>import</scope>
      </dependency>

    </dependencies>
  </dependencyManagement>

  <build>
    <pluginManagement>
      <plugins>
        <!--
        Increase memory settings for testsuites.
        -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-failsafe-plugin</artifactId>
          <configuration>
            <argLine>
              -Xmx400m
              -XX:MaxPermSize=192m
              -XX:+HeapDumpOnOutOfMemoryError
              -XX:HeapDumpPath=${project.build.directory}/failsafe-reports
            </argLine>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <!--
      Need to know about 'nexus-plugin' packaging for integration-tests.
      -->
      <plugin>
        <groupId>org.sonatype.nexus</groupId>
        <artifactId>nexus-plugin-bundle-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <!--
    Generate testsuite shard configurations in local repository.
    -->
    <profile>
      <id>testsuite-genshards</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.codehaus.gmaven</groupId>
              <artifactId>gmaven-plugin</artifactId>
              <executions>
                <execution>
                  <phase>process-test-sources</phase>
                  <goals>
                    <goal>execute</goal>
                  </goals>
                  <configuration>
                    <providerSelection>1.7</providerSelection>
                    <classpathIncludes>none</classpathIncludes>
                    <source>file:${project.basedir}/../src/test/script/genshards.groovy</source>
                    <defaults>
                      <testsuite.shardDir>
                        ${settings.localRepository}/org/sonatype/nexus/testsuite/${project.artifactId}/shards
                      </testsuite.shardDir>
                    </defaults>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <!--
    Execute testsuite shard.
    -->
    <profile>
      <id>testsuite-shard</id>
      <activation>
        <property>
          <name>testsuite.shardId</name>
        </property>
      </activation>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-failsafe-plugin</artifactId>
              <configuration>
                <includesFile>
                  ${settings.localRepository}/org/sonatype/nexus/testsuite/${project.artifactId}/shards/shard-${testsuite.shardId}.txt
                </includesFile>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <!--
    Custom testsuite configuration.
    -->
    <profile>
      <id>testsuite-gencustom</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.codehaus.gmaven</groupId>
              <artifactId>gmaven-plugin</artifactId>
              <executions>
                <execution>
                  <phase>process-test-sources</phase>
                  <goals>
                    <goal>execute</goal>
                  </goals>
                  <configuration>
                    <providerSelection>1.7</providerSelection>
                    <classpathIncludes>none</classpathIncludes>
                    <source>file:${project.basedir}/../src/test/script/gencustom.groovy</source>
                    <defaults>
                      <testsuite.customIncludes>**/*IT.java</testsuite.customIncludes>
                      <testsuite.shardDir>${settings.localRepository}/org/sonatype/nexus/testsuite/${project.artifactId}/shards</testsuite.shardDir>
                    </defaults>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <!--
    Custom testsuite execution.
    -->
    <profile>
      <id>testsuite-runcustom</id>
      <build>
        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-failsafe-plugin</artifactId>
              <configuration>
                <includesFile>${settings.localRepository}/org/sonatype/nexus/testsuite/${project.artifactId}/shards/shard-custom.txt</includesFile>
              </configuration>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>
    </profile>

    <!--
    Allow proper resolution of Groovy classes in IDEA.
    -->
    <profile>
      <id>idea</id>
      <dependencies>
        <dependency>
          <groupId>org.codehaus.gmaven.runtime</groupId>
          <artifactId>gmaven-runtime-1.7</artifactId>
          <version>1.5</version>
          <scope>provided</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>
