<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.sonatype.nexus.plugin</groupId>
    <artifactId>nexus-enterprise-plugins</artifactId>
    <version>2.1-SNAPSHOT</version>
  </parent>

  <artifactId>nexus-unpack-plugin</artifactId>
  <packaging>nexus-plugin</packaging>

  <name>Nexus Professional Plugin :: Unpack</name>
  <description>A plugin that will automatically unpack deployed bundles</description>
  <url/>

  <dependencies>

    <!-- Because we enforce license -->
    <dependency>
      <groupId>com.sonatype.nexus.edition</groupId>
      <artifactId>nexus-professional-edition</artifactId>
    </dependency>

    <!-- This is a plugin -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-api</artifactId>
    </dependency>

    <!-- This is a plugin that contributes REST API -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-rest-api</artifactId>
    </dependency>

    <!-- AllInOne for UTs -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-plugin-test-api</artifactId>
    </dependency>

    <!-- AllInOne for ITs -->
    <dependency>
      <groupId>org.sonatype.nexus</groupId>
      <artifactId>nexus-test-harness-launcher</artifactId>
    </dependency>

    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>apache-maven</artifactId>
      <version>3.0.4</version>
      <type>tar.gz</type>
      <classifier>bin</classifier>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <groupId>commons-logging</groupId>
          <artifactId>commons-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>

  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>app-lifecycle-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.sonatype.nexus.plugins</groupId>
        <artifactId>nexus-test-environment-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-invoker-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-failsafe-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

</project>
