<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.spice</groupId>
    <artifactId>spice-parent</artifactId>
    <version>19</version>
  </parent>

  <groupId>org.sonatype.sisu</groupId>
  <artifactId>sisu-ehcache</artifactId>
  <version>1.0</version>

  <name>SISU EHCache Component</name>
  <description>SISU EHCache Component</description>

  <url>https://github.com/sonatype/sisu-ehcache</url>

  <scm>
    <url>https://github.com/sonatype/sisu-ehcache</url>
    <connection>scm:git:git://github.com/sonatype/sisu-ehcache.git</connection>
    <developerConnection>scm:git:git@github.com:sonatype/sisu-ehcache.git</developerConnection>
  </scm>

  <properties>
    <ehcache.version>2.5.1</ehcache.version>
  </properties>

  <dependencies>

    <!-- AppContext as one of the few "real" dependencies -->
    <dependency>
      <groupId>org.sonatype.appcontext</groupId>
      <artifactId>appcontext</artifactId>
      <version>3.0</version>
      <scope>compile</scope>
    </dependency>

    <!-- Actual dependencies -->
    <dependency>
      <groupId>net.sf.ehcache</groupId>
      <artifactId>ehcache-core</artifactId>
      <version>${ehcache.version}</version>
      <scope>compile</scope>
    </dependency>

    <!-- EHCache uses this for logging -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
    </dependency>

    <!-- SISU, needed if you use this library as a SISU component -->
    <!-- Then you will have to add this to SISUized enviornment anyway -->
    <dependency>
      <groupId>javax.inject</groupId>
      <artifactId>javax.inject</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sonatype.sisu</groupId>
      <artifactId>sisu-inject-bean</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.sonatype.sisu</groupId>
      <artifactId>sisu-guice</artifactId>
      <classifier>no_aop</classifier>
      <scope>provided</scope>
    </dependency>
    <!-- For backward dependency, see DefaultPlexusEhCacheWrapper -->
    <dependency>
      <groupId>org.sonatype.sisu</groupId>
      <artifactId>sisu-inject-plexus</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-component-annotations</artifactId>
      <scope>provided</scope>
    </dependency>

    <!-- Test stuff -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
    </dependency>

  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.plexus</groupId>
        <artifactId>plexus-component-metadata</artifactId>
      </plugin>
    </plugins>
  </build>
</project>