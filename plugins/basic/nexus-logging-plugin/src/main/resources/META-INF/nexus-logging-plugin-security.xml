<security>
  <version>2.0.5</version>
  <roles>
    <role>
      <id>ui-logging-admin</id>
      <name>UI: Logging Administration</name>
      <description>Gives access to Logging Administration screen in Nexus UI</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>logging-read</privilege>
        <privilege>logging-update</privilege>
      </privileges>
    </role>
  </roles>
  <privileges>
    <privilege>
      <id>logging-read</id>
      <type>method</type>
      <name>Logging - (read)</name>
      <description>Give permission to read existing logging configuration.</description>
      <properties>
        <property>
          <key>method</key>
          <value>read</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:logging</value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>logging-update</id>
      <type>method</type>
      <name>Logging - (update,read)</name>
      <description>Give permission to read and modify logging configuration.</description>
      <properties>
        <property>
          <key>method</key>
          <value>update,read</value>
        </property>
        <property>
          <key>permission</key>
          <value>nexus:logging</value>
        </property>
      </properties>
    </privilege>
  </privileges>
</security>