          <type>boolean</type>
          <version>2.0.0+</version>
          <required>true</required>
          <defaultValue>true</defaultValue>
          <description>The flag determining if the capability is enabled</description>
        </field>
        <field>
          <name>typeId</name>
          <version>1.0.0+</version>
          <type>String</type>
          <required>true</required>
          <description>The type id of the capability.</description>
        </field>
        <field>
          <name>properties</name>
          <version>1.0.0+</version>
          <association>
            <type>CapabilityPropertyResource</type>
            <multiplicity>*</multiplicity>
          </association>
          <required>false</required>
          <description>A list of configuration properties for the capability.</description>
          <annotations>
            <annotation>@javax.xml.bind.annotation.XmlElementWrapper( name = "properties" )</annotation>
            <annotation>@javax.xml.bind.annotation.XmlElement( name = "capability-property" )</annotation>
          </annotations>
        </field>
      </fields>
      <codeSegments>
        <codeSegment>
          <version>1.0.0+</version>
          <code>
            <![CDATA[
              public CapabilityResource withId( final String id )
              {
                  setId( id );
                  return this;
              }

              public CapabilityResource withTypeId( final String typeId )
              {
                  setTypeId( typeId );
                  return this;
              }

              public CapabilityResource withEnabled( final boolean enabled )
              {
                  setEnabled( enabled );
                  return this;
              }

              public CapabilityResource withNotes( final String notes )
              {
                  setNotes( notes );
                  return this;
              }

              public CapabilityResource withProperty( final CapabilityPropertyResource property )
              {
                  addProperty( property );
                  return this;
              }

              public static CapabilityResource capability()
              {
                  return new CapabilityResource();
              }
            ]]>
          </code>
        </codeSegment>
      </codeSegments>
    </class>

