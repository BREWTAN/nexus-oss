<security>
  <version>2.0.2</version>
  <roles>
    <role>
      <id>obr-all-read</id>
      <name>Repo: All OBRs (Read)</name>
      <description>Gives access to read ALL content of ALL OBRs in Nexus.</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>obr-read</privilege>
      </privileges>
      <roles>
        <role>obr-all-view</role>
      </roles>
    </role>
    <role>
      <id>obr-all-full</id>
      <name>Repo: All OBRs (Full Control)</name>
      <description>Gives access to create/read/update/delete ALL content of ALL OBRs in Nexus.</description>
      <sessionTimeout>60</sessionTimeout>
      <privileges>
        <privilege>obr-create</privilege>
        <privilege>obr-read</privilege>
        <privilege>obr-update</privilege>
        <privilege>obr-delete</privilege>
      </privileges>
      <roles>
        <role>obr-all-view</role>
      </roles>
    </role>
  </roles>
  <privileges>
    <privilege>
      <id>obr-create</id>
      <name>All OBRs - (create)</name>
      <description>Give permission to create any content in any OBR.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>create,read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>obr</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>obr-read</id>
      <name>All OBRs - (read)</name>
      <description>Give permission to read any content in any OBR.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>obr</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>obr-update</id>
      <name>All OBRs - (update)</name>
      <description>Give permission to update any content in any OBR.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>update,read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>obr</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
    <privilege>
      <id>obr-delete</id>
      <name>All OBRs - (delete)</name>
      <description>Give permission to delete any content in any OBR.</description>
      <type>target</type>
      <properties>
        <property>
          <key>method</key>
          <value>delete,read</value>
        </property>
        <property>
          <key>repositoryTargetId</key>
          <value>obr</value>
        </property>
        <property>
          <key>repositoryId</key>
          <value></value>
        </property>
        <property>
          <key>repositoryGroupId</key>
          <value></value>
        </property>
      </properties>
    </privilege>
  </privileges>
</security>
